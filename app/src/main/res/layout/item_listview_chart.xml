<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp">

    <TextView
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/text_number"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/image_Artwork"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_number"/>
    <TextView
        android:textSize="@dimen/size_name_song"
        android:textColor="@color/colorTopic"
        android:layout_marginTop="35dp"
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One thing"
        android:layout_toRightOf="@id/image_Artwork"/>
    <TextView
        android:layout_toRightOf="@id/image_Artwork"
        android:layout_below="@id/text_title"
        android:text="One direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_username"/>


</RelativeLayout>